<style>
	nav {
		background: linear-gradient(90deg, #0078d7, #00a6ff);
		padding: 1rem 2rem;
		border-radius: 0.5rem;
		display: flex;
		justify-content: space-between; /* separates left and right sides */
		align-items: center;
		font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
	}

	.nav-left {
		display: flex;
		align-items: center;
		gap: 1.6rem; /* spacing between links */
	}

	.nav-right {
		color: #ffffff;
		font-size: 1.1rem;
	}

	nav a,
	nav button {
		color: #ffffff;
		text-decoration: none;
		font-weight: 500;
		font-size: 1.1rem;
		position: relative;
		background: none;
		border: none;
		cursor: pointer;
		transition: color 0.2s ease;
	}

	nav a::after,
	nav button::after {
		content: "";
		position: absolute;
		left: 0;
		bottom: -4px;
		width: 0%;
		height: 2px;
		background: white;
		transition: width 0.3s ease;
	}

	nav a:hover,
	nav button:hover {
		color: rgb(15, 238, 227);
	}

	nav a:hover::after,
	nav button:hover::after {
		width: 100%;
	}

	nav form {
		display: inline; /* keeps buttons inline with links */
	}
</style>

<!-- 
    Logged in:
    	Home | Comments | Logout
	Else:
		Home | Comments | Login | Register
 -->
<nav>
	<div class="nav-left">
		<form action="/" method="GET">
			<button type="submit">Home</button>
		</form> |
		<form action="/comments" method="GET">
			<button type="submit">Comments</button>
		</form> |
		<form action="/pdfs" method="GET">
			<button type="submit">Documents</button>
		</form> |
		{{#if user.isLoggedIn}}
			<form action="/logout" method="POST">
				<button type="submit">Logout</button>
			</form>			
		{{else}}
			<form action="/login" method="GET">
				<button type="submit">Login</button>
			</form> |
			<form action="/register" method="GET">
				<button type="submit">Register</button>
			</form>
		{{/if}}
	</div>
	<div class="nav-right">
		{{#if user.isLoggedIn}}
			<strong>{{user.display_name}}</strong>
		{{/if}}
	</div>
</nav>